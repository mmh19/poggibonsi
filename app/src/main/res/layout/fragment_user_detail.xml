<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mainbg">



    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_marginTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_collapseMode="pin"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                app:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="@string/app_name"/>
    </android.support.v7.widget.Toolbar>

    <ImageView
            android:id="@+id/backButton"
            android:layout_width="26dp"
            android:layout_height="56dp"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="16dp"
            android:tint="#ffffff"
            android:src="@drawable/backa"
            android:layout_marginStart="16dp"/>

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:elevation="2dp"
            app:cardMaxElevation="2dp"
            android:clipChildren="false"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="64dp"
            android:layout_below="@id/backButton"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="32dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/colorPrimary"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/userimagebg"
                    android:layout_alignParentRight="true"/>

            <TextView
                    android:id="@+id/userNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome cognome"
                    android:textSize="17dp"
                    android:textColor="@color/slate"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"/>

            <TextView
                    android:id="@+id/userLevelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Livello: 10"
                    android:layout_below="@id/userNameTextView"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/lightGreyBlue"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:weightSum="3">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Livello"
                            android:textSize="12sp"
                            android:textColor="@color/lightGreyBlue"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="4dp"/>
                    <TextView
                            android:id="@+id/rankingTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/slate"
                            android:textSize="17sp"
                            android:text="12"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Partite"
                            android:textSize="12sp"
                            android:textColor="@color/lightGreyBlue"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="4dp"/>

                    <TextView
                            android:id="@+id/matchesTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/slate"
                            android:textSize="17sp"
                            android:text="12"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Goal"
                            android:textSize="12sp"
                            android:textColor="@color/lightGreyBlue"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginBottom="4dp"/>

                    <TextView
                            android:id="@+id/goalTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/slate"
                            android:textSize="17sp"
                            android:text="12"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_height="46dp"
            android:layout_width="223dp"
            app:cardElevation="30dp"
            android:background="@drawable/buttonbgclear"
            app:cardBackgroundColor="#00ffffff"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="41dp">

        <Button
                android:id="@+id/challengeButton"
                android:layout_width="223dp"
                android:layout_height="46dp"
                android:background="@drawable/buttonbgclear"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:text="@string/sfida"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>